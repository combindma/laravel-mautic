{
    "name": "combindma/laravel-mautic",
    "description": "Mautic API for Laravel applications",
    "keywords": [
        "combindma",
        "laravel",
        "mautic"
    ],
    "homepage": "https://github.com/combindma/laravel-mautic",
    "license": "MIT",
    "authors": [
        {
            "name": "Combind",
            "email": "webmaster@combind.ma",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "illuminate/contracts": "^10.0",
        "mautic/api-library": "dev-upgrade-to-php8",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Rocksheep/api-library.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Combindma\\Mautic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Combindma\\Mautic\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Combindma\\Mautic\\MauticServiceProvider"
            ],
            "aliases": {
                "Mautic": "Combindma\\Mautic\\Facades\\Mautic"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
